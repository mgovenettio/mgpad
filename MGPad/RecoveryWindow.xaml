<Window x:Class="MGPad.RecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document Recovery"
        Height="350"
        Width="640"
        MinWidth="520"
        MinHeight="260"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top"
                   Margin="0 0 0 8"
                   TextWrapping="Wrap"
                   Text="MGPad found autosaved documents from a previous session. Choose a file to recover or discard." />
        <DataGrid x:Name="RecoveryGrid"
                  ItemsSource="{Binding RecoverableItems}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Document"
                                    Binding="{Binding DisplayName}"
                                    Width="2*" />
                <DataGridTextColumn Header="Original Path"
                                    Binding="{Binding OriginalPath}"
                                    Width="3*" />
                <DataGridTextColumn Header="Timestamp"
                                    Binding="{Binding TimestampLocal}"
                                    Width="*" />
                <DataGridTextColumn Header="Autosave Path"
                                    Binding="{Binding AutosavePath}"
                                    Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom"
                    Margin="0 8 0 0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Content="Recover Selected"
                    x:Name="RecoverButton"
                    Click="RecoverButton_Click"
                    IsDefault="True" />
            <Button Content="Discard Selected"
                    x:Name="DiscardSelectedButton"
                    Click="DiscardSelectedButton_Click" />
            <Button Content="Discard All"
                    Click="DiscardAllButton_Click" />
            <Button Content="Close"
                    Click="CloseButton_Click" />
        </StackPanel>
    </DockPanel>
</Window>
